<?xml version="1.0" encoding="UTF-8"?>

<ParameterPanel>
    <Tab Title="Framework type">
        <RadioButtonGroup Key="type">
            <Choice Value="bmf" Text="Bemis-Murcko framework" Selected="true"/>
            <Choice Value="mcs" Text="Maximum common substructure"/>
            <Choice Value="largestring" Text="Largest ring"/>
            <Choice Value="allringsystems" Text="All fused ring systems"/>
            <Choice Value="largestringsystem" Text="Largest fused ring system"/>
            <Choice Value="sssr" Text="Smallest set of smallest rings (SSSR)"/>
            <Choice Value="cssr" Text="Complete set of smallest rings (CSSR)"/>
            <Choice Value="keep" Text="Only pre/post process, no framework reduction"/>
        </RadioButtonGroup>
        <Boolean Key="keepsingleatom" Label="Keep single atom for non-empty acyclic structures" Value="true">
            <Dependencies>
                <Item Key="type" Range="bmf"/>
            </Dependencies>
        </Boolean>
    </Tab>
    <Tab Title="Advanced settings">
        <Group Title="Input preprocess">
            <Boolean Key="lfin" Label="Process only the largest fragment of the input structure" Value="false">
                <Dependencies>
                    <Item Key="type" Range="bmf,largestring,allringsystems,largestringsystem,sssr,cssr,keep"/>
                </Dependencies>
            </Boolean>
            <Boolean Key="prunein" Label="Prune input - generalize input atom and bond types" Value="false">
                <Dependencies>
                    <Item Key="type" Range="mcs,largestring,allringsystems,largestringsystem,sssr,cssr,keep"/>
                </Dependencies>
            </Boolean>
            <Boolean Key="hydrogenize" Label="Add explicit hydrogens to the input structure" Value="false">
                <Dependencies>
                    <Item Key="dehydrogenize" Range="false"/>
                    <Item Key="type" Range="mcs,keep"/>
                    <Item Key="prunein" Range="false"/>
                </Dependencies>
            </Boolean>
            <Boolean Key="dehydrogenize" Label="Remove explicit hydrogens from the input structure" Value="false">
                <Dependencies>
                    <Item Key="hydrogenize" Range="false"/>
                    <Item Key="type" Range="mcs,keep"/>
                    <Item Key="prunein" Range="false"/>
                </Dependencies>
            </Boolean>
        </Group>
        <Group Title="Output postprocess">
            <Boolean Key="pruneout" Label="Prune results - generalize result atom and bond types" Value="false">
                <Dependencies>
                    <Item Key="type" Range="mcs,largestring,allringsystems,largestringsystem,sssr,cssr,keep"/>
                    <Item Key="prunein" Range="false"/>
                </Dependencies>
            </Boolean>
            <Boolean Key="lfout" Label="Return only the largest fragment of the result" Value="false">
                <Item Key="type" Range="bmf,mcs,allringsystems,sssr,cssr,keep"/>
                <Item Key="oeqcheck" Range="false"/>
            </Boolean>
            <Boolean Key="oeqcheck" Label="Remove topologically equivalent output fragments" Value="false">
                <Dependencies>
                    <Item key="lfout" Range="false"/>
                    <Item Key="type" Range="bmf,mcs,allringsystems,sssr,cssr,keep"/>
                </Dependencies>
            </Boolean>
        </Group>

    </Tab>



    
</ParameterPanel>
