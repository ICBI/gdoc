<?xml version="1.0" encoding="UTF-8"?>

<ParameterPanel>
    <Group Title="Method">
	    <RadioButtonGroup Key="method">
			<Choice Value="vg" Text="VG"/>
			<Choice Value="klop" Text="KLOP"/>
			<Choice Value="phys" Text="PHYS"/>
			<Choice Value="user" Text="User defined"/>
			<Choice Value="weighted" Text="Weighted" Selected="true"/>
	    </RadioButtonGroup>
    </Group>
    <Group Title="Method weights">
    	<Number Key="wvg" Label="VG" Range="[0.0,1000]" Value="1">
		<Dependencies>
	    		<Item Key="method" Range="weighted"/>
			</Dependencies>
        </Number>
        <Number Key="wklop" Label="KLOP" Range="[0.0,1000]" Value="1">
			<Dependencies>
	    		<Item Key="method" Range="weighted"/>
			</Dependencies>
        </Number>
        <Number Key="wphys" Label="PHYS" Range="[0.0,1000]" Value="1">
			<Dependencies>
	    		<Item Key="method" Range="weighted"/>
			</Dependencies>
        </Number>
        <Number Key="wuser" Label="User defined" Range="[0.0,1000]" Value="0">
			<Dependencies>
	    		<Item Key="method" Range="weighted"/>
			</Dependencies>
        </Number>
    </Group>
    <Group>
    <Precision Key="precision" Label="Decimal places"/>
    <Number Key="anion" Label="&lt;html&gt;Cl&lt;sup&gt;-&lt;/sup&gt; concentration (mol/dm&lt;sup&gt;3&lt;/sup&gt;)&lt;/html&gt;" Range="[0.0,0.25]" Value="0.1"/>
    <Number Key="kation" Label="&lt;html&gt;Na&lt;sup&gt;+&lt;/sup&gt; K&lt;sup&gt;+&lt;/sup&gt; concentration (mol/dm&lt;sup&gt;3&lt;/sup&gt;)&lt;/html>" Range="[0.0,0.25]" Value="0.1"/>
    <Number Key="lower" Label="pH lower limit" Range="[0.0,14.0]" Value="0"/>
    <Number Key="upper" Label="pH upper limit" Range="[0.0,14.0]" Value="14"/>
    <Number Key="step" Label="pH step size" Value="0.5"/>
    </Group>
    <Group Title="Reference pH values">
        <Number Key="ref1" Label="pH 1" Range="[0.0,14.0]" Value="1.5"/>
        <Number Key="ref2" Label="pH 2" Range="[0.0,14.0]" Value="5.0"/>
        <Number Key="ref3" Label="pH 3" Range="[0.0,14.0]" Value="6.5"/>
        <Number Key="ref4" Label="pH 4" Range="[0.0,14.0]" Value="7.4"/>
    </Group>
   	<Boolean Key="considertautomerization" Label="Consider tautomerization" Value="false"/>
</ParameterPanel>
