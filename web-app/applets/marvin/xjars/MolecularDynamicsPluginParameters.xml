<?xml version="1.0" encoding="UTF-8"?>

<ParameterPanel>
<Group Title="Display">
    <RadioButtonGroup Key="display">
	<Choice Value="animation" Text="Animation" Selected="true"/>
	<Choice Value="frames" Text="Frames"/>
    </RadioButtonGroup>
</Group>
    
    <SingleSelection Key="forcefield" Label="Force Field">
	<Choice Value="dreiding" Text="Dreiding" Selected="true"/>
    </SingleSelection>
    <SingleSelection Key="integrator" Label="Integrator">
    	<Choice Value="positionverlet" Text="Position Verlet"/>
    	<Choice Value="velocityverlet" Text="Velocity Verlet" Selected="true"/>
    	<Choice Value="leapfrog" Text="Leap Frog"/>
    </SingleSelection>
    <Number Key="stepno" Label="Simulation steps:" Range="[1,1000000000]" Value="1000" Type="integer"/>
    <Number Key="steptime" Label="Step time (fs):" Range="[0,1000000000]" Value="0.1" Type="real"/>
    <Number Key="temperature" Label="Initial temperature (K):" Range="[0,1000000000]" Value="300" Type="real"/>
    <Number Key="savestart" Label="Start time of display (fs):" Range="[0,1000000000]" Value="0" Type="real"/>
    <Number Key="samplinginterval" Label="Frame interval (fs):" Range="[0,1000000000]" Value="10" Type="real"/>
    
</ParameterPanel>
