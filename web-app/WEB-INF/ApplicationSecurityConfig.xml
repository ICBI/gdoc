<security-config>
	<upt-context-name>
		<!-- Context Name for the UPT Application -->
		csmupt
	</upt-context-name>
	<application-list>
	<!-- For every application using the security api an entry should be made here -->
		<application>
			<context-name>
				csmupt
			</context-name>
			<authentication>
				<lockout-time>
					<!--@lockout.time.milliseconds@	-->	
                    10		
				</lockout-time>
				<allowed-login-time>
					<!--@lockout.time.milliseconds@	-->	
                    10		
				</allowed-login-time>
				<allowed-attempts>
					<!--@lockout.time.milliseconds@	-->	
                    5000
				</allowed-attempts>
				<authentication-provider-class>
				<!-- Fully qualified class name gov.nih.nci.security.authentication.CommonAuthenticationManager-->
				</authentication-provider-class>
			</authentication>
			<authorization>
				<authorization-provider-class>
					<!-- Fully qualified class name gov.nih.nci.security.provisioning.AuthorizationManagerImpl -->
				</authorization-provider-class>
				<hibernate-config-file>
					<!-- Fully qualified file path -->
				</hibernate-config-file>
			</authorization>
		</application>
        <application>
			<context-name>
				gdoc
			</context-name>
			<authentication>
				<lockout-time>
					<!--@lockout.time.milliseconds@	-->	
                    10		
				</lockout-time>
				<allowed-login-time>
					<!--@lockout.time.milliseconds@	-->	
                    10		
				</allowed-login-time>
				<allowed-attempts>
					<!--@lockout.time.milliseconds@	-->	
                    5000
				</allowed-attempts>
				<authentication-provider-class>
				<!-- Fully qualified class name gov.nih.nci.security.authentication.CommonAuthenticationManager-->
				</authentication-provider-class>
			</authentication>
			<authorization>
				<authorization-provider-class>
					<!-- Fully qualified class name gov.nih.nci.security.provisioning.AuthorizationManagerImpl-->
				</authorization-provider-class>
				<hibernate-config-file>
					<!-- Fully qualified file path
                    /Users/rossokr/Desktop/gdoc.csm.new.hibernate.cfg.xml-->
				</hibernate-config-file>
			</authorization>
		</application>
	</application-list>
</security-config>
